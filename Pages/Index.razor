@page "/"
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Data

    <SfTreeView TValue="MailItem" ShowCheckBox="true" AllowEditing="true"
                AllowMultiSelection="true" AllowDragAndDrop="true">
        <TreeViewFieldsSettings TValue="MailItem" Id="EmployeeID" HasChildren="EmployeeID"
                                Text="FirstName" Expanded="Expanded"
                                Query="new sf.data.Query().from('Employees').select('EmployeeID,FirstName,Title').take(5)">
            <SfDataManager Url="https://services.odata.org/V4/Northwind/Northwind.svc" Adaptor="@Syncfusion.Blazor.Adaptors.ODataV4Adaptor" CrossDomain="true"></SfDataManager>
            <TreeViewFieldChild TValue="MailItem" Id="OrderID" ParentID="EmployeeID"
                                Text="ShipName" Expanded="Expanded"
                                Query="new sf.data.Query().from('Orders').select('OrderID,EmployeeID,ShipName').take(5)">
            <SfDataManager Url="https://services.odata.org/V4/Northwind/Northwind.svc" Adaptor="@Syncfusion.Blazor.Adaptors.ODataV4Adaptor" CrossDomain="true"></SfDataManager>
            </TreeViewFieldChild>
        </TreeViewFieldsSettings>
    </SfTreeView>

@code{

    public class MailItem
    {
        public int? EmployeeID { get; set; }
        public int OrderID { get; set; }
        public string ShipName { get; set; }
        public string FirstName { get; set; }
    }
}

